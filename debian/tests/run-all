#!/bin/sh

exec 2>&1
set -e

banner() {
  echo
  echo "$@"
  echo "$@" | sed -e 's/./-/g'
  echo
}

export REBAR=/usr/bin/rebar

epmd -daemon

failed=0

(
  banner stdlib
  cd lib/elixir
  ../../bin/elixir -r "test/elixir/test_helper.exs" -pr "test/elixir/**/*_test.exs"
) || failed=1

for lib in $(ls -1 lib | grep -v elixir); do
  (
    banner $lib
    set -x
    cd lib/$lib
    ../../bin/elixir -r "test/test_helper.exs" -pr "test/**/*_test.exs"
  ) || failed=1
done

exit $failed

